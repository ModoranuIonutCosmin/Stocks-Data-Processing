{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Web API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/StocksProcessing.API/bin/Debug/net6.0/StocksProcessing.API.dll",
            "launchSettingsProfile": "Kestrel",
            "args": [],
            "cwd": "${workspaceFolder}/StocksProcessing.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Bulk gatherer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/StockBulkGatherer/bin/Debug/net6.0/StockBulkGatherer.dll",
            "args": [],
            "cwd": "${workspaceFolder}/StockBulkGatherer",
            "stopAtEntry": false,
            "console": "internalConsole"
        },

        {
            "name": "Attach to .NET Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}"
        }
    ]
}